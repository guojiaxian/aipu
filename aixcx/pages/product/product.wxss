/* pages/product/product.wxss */

page {
  font-size: 26rpx;
}

.slide-image {
  width: 100%;
  height: 350rpx;
  box-shadow: 0px 2rpx 8rpx 0px rgba(141, 155, 172, 0.5);
}

.pro-box {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
}

.pro-price {
  color: #f66;
  font-size: 50rpx;
  padding: 10rpx 20rpx;
}
.pro-name-box{
  display: flex;
  flex-direction: column;
}
.pro-name{
  font-size: 36rpx;
  font-weight: 600;
  padding: 20rpx;
}
.pro-msg{
  font-size: 26rpx;
  padding: 5rpx 0 20rpx 20rpx ;
}
.pro-bottom{
  border-top: 1rpx solid #ddd;
  display: flex;
  align-items: center;
}
.pro-bottom text{
  padding: 18rpx 30rpx;
}