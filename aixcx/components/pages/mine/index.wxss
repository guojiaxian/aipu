/* components/pages/mine/index.wxss */
.jox-class{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
}
.top{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 350rpx;
  background-color: #ffffff;
  box-shadow: 0px -2rpx 18rpx 0px rgba(141, 155, 172, 0.5);

}
.head-img{
 height: 150rpx;
 width: 150rpx;
 overflow:hidden;
 display:block; 
 border-radius: 50%;
 
}
.nickname{
  margin-top: 10rpx;
}
.nav{
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  width: 95%;
  height: 120rpx;
  border-radius: 20rpx;
  margin-top: -50rpx;
  box-shadow: 0px -2rpx 18rpx 0px rgba(141, 155, 172, 0.5);
}
.nav-item{
  display: flex;
  flex-direction: column;
  width: 30%;
  height: 100rpx;
  align-items: center;
  justify-content: center;

}
.nav-icon{
  padding: 10rpx;
}
.list{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 20rpx;
    box-shadow: 0px -2rpx 18rpx 0px rgba(141, 155, 172, 0.5);
}

.list-item{
  height: 90rpx;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-bottom: 1rpx solid rgba(141, 155, 172, 0.5);
}
.list-item:last-child{
   border-bottom: none;
}
.list-icon{
  margin-left: 20rpx;
}
.list-name{
  margin-left: 10rpx;
}
.list-next{
  position: absolute;
  right: 20rpx;
}